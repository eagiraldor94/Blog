{% extends "layout.twig" %}

{% block content %}
  <h2>Edit Post</h2>
  <p>
      <a class="btn btn-default" href="{{'admin/posts' | url }}">Back</a>
  </p>
  {% if errors %}
    {% include ('partials/errors.twig') %}
  {% endif %}
  {% if result %}
    <div class="alert alert-success">Post Updated!</div>
  {% endif %}
  {% for blogPost in blogPosts %}
  <form method="post" action="{{'admin/posts/edit'| url}}">
    <div class="form-group">
      <label for="inputTitle">Title</label>
      <input type="text" name="title" value="{{blogPost.title}}" id="inputTitle" class="form-control">

    </div>
    <div class="form-group">
      <label for="inputImg">Image Url</label>
      <input type="text" name="image" value="{{blogPost.img_url}}" id="inputImg" class="form-control">

    </div>
    <textarea class="form-control" name="content" rows="5" id="inputContent" placeholder="{{blogPost.content[:140]}}"></textarea>
    <br>
    <input type="hidden" name="id" value="{{blogPost.id}}">
    <input type="submit" name="" value="Update" class="btn btn-primary">
  </form>
  {% endfor %}
{% endblock %}
