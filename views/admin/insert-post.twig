
{% extends "layout.twig" %}

{% block content %}
  <h2>New Posts</h2>
  <p>
      <a class="btn btn-default" href="{{'admin/posts' | url }}">Back</a>
  </p>
  {% if errors %}
    {% include ('partials/errors.twig') %}
  {% endif %}
  {% if result %}
    <div class="alert alert-success">Post Saved!</div>
  {% endif %}
  <form method="post" onsubmit="return validateForm()">
    <div class="form-group">
      <label for="inputTitle">Title</label>
      <input type="text" name="title" value="" id="inputTitle" class="form-control">

    </div>
    <div class="form-group">
      <label for="inputImg">Image Url</label>
      <input type="text" name="image" value="" id="inputImg" class="form-control">

    </div>
    <textarea class="form-control" name="content" rows="5" id="inputContent"></textarea>
    <br>
    <input type="submit" name="" value="Save" class="btn btn-primary">
  </form>
{% endblock %}
{% block js %}
  <script type="text/javascript">
    function validateForm(){
      var title = document.getElementById('inputTitle').value.trim();
      if (title===''){
        swal({
        type: 'error',
        title: 'Oops...',
        text: 'Title is required!',
        });
        return false;
      }
    }
  </script>

{% endblock %}
